
page {
	height: 100%;
	width: 100%;
}
.in:active{
	background: -webkit-gradient(linear, left top, left bottom, from(#87e2f4), to(#65a3ef));
	background: -webkit-linear-gradient(#87e2f4, #65a3ef);
	background: linear-gradient(#87e2f4, #65a3ef);
	-webkit-box-shadow: #666666 3rpx 3rpx 5rpx;
	        box-shadow: #666666 3rpx 3rpx 5rpx;
}
.in {
	width: 70%;
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	-webkit-box-orient: horizontal;
	-webkit-box-direction: normal;
	-webkit-flex-flow: row;
	        flex-flow: row;
	-webkit-box-pack: center;
	-webkit-justify-content: center;
	        justify-content: center;
	-webkit-box-align: center;
	-webkit-align-items: center;
	        align-items: center;
	color: white;
	background: -webkit-gradient(linear, left top, left bottom, from(#8debff), to(#6cacff));
	background: -webkit-linear-gradient(#8debff, #6cacff);
	background: linear-gradient(#8debff, #6cacff);
	border-radius: 50rpx;
	font-size: 50rpx;
	height: 120rpx;
	margin-bottom: 100rpx;
	-webkit-box-shadow: #666666 3rpx 3rpx 10rpx;
	        box-shadow: #666666 3rpx 3rpx 10rpx;
}
.bubble {
	position: relative;
	overflow: hidden;
}
.bubble:after {
	content: "8debff";
	background: #5c9899;
	position: absolute;
	width: 750rpx;
	height: 750rpx;
	left: calc(50% - 375rpx);
	top: calc(50% - 375rpx);
	opacity: 0;
	margin: auto;
	border-radius: 50%;
	-webkit-transform: scale(1);
	        transform: scale(1);
	-webkit-transition: all 0.5s ease-in-out;
	transition: all 0.5s ease-in-out;
}
.bubble:active:after {
	-webkit-transform: scale(0);
	        transform: scale(0);
	opacity: 1;
	-webkit-transition: 0s;
	transition: 0s;
}
.main {
	height: 100%;
	width: 100%;
	background: url("http://qwd5e3z6e.hd-bkt.clouddn.com/2.png");
	background-size: 100% 100%;
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	-webkit-box-orient: vertical;
	-webkit-box-direction: normal;
	-webkit-flex-flow: column;
	        flex-flow: column;
	-webkit-box-align: center;
	-webkit-align-items: center;
	        align-items: center;
	-webkit-box-pack: end;
	-webkit-justify-content: flex-end;
	        justify-content: flex-end;
}


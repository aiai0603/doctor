
.bubble {
	position: relative;
	overflow: hidden;
}
.bubble:after {
	content: "cccccc";
	background: #5c9899;
	position: absolute;
	width: 750rpx;
	height: 750rpx;
	left: calc(50% - 375rpx);
	top: calc(50% - 375rpx);
	opacity: 0;
	margin: auto;
	border-radius: 50%;
	-webkit-transform: scale(1);
	        transform: scale(1);
	-webkit-transition: all 0.5s ease-in-out;
	transition: all 0.5s ease-in-out;
}
.bubble:active:after {
	-webkit-transform: scale(0);
	        transform: scale(0);
	opacity: 1;
	-webkit-transition: 0s;
	transition: 0s;
}
